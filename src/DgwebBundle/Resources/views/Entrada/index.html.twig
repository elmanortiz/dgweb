{% extends 'DgwebBundle:Panel:layoutpanel.html.twig' %}
{% block titulo %}Editar blog{% endblock %}
{% block contenido -%}
    
     <div class="container" style="background-color: #F6F6F6; padding-top:10px; padding-bottom: 1px;">
    
    <h1>Entrada de blog</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Escritapor</th>
                <th>Fecha</th>
                <th>Contenido</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_entrada_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.escritapor }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.contenido }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_entrada_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_entrada_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_entrada_new') }}">
                Crear blog
            </a>
        </li>
    </ul>
    {% endblock %}
