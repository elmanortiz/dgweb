


{% block body -%}
    <h1>Modificar Proyecto</h1>

            {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}
          <div class="row container-fluid">  

            <div class="row col-md-6 " style="margin-bottom:50px">
                <div {{ form_row(edit_form.titulo) }}</div> 
             </div>  
             <div class="row col-md-6 " style="margin-bottom:50px">
                <div {{ form_row(edit_form.contenido) }}</div> 
             </div>
                 <div class="row col-md-6 " style="margin-bottom:50px">
                <div {{ form_row(edit_form.idCategoriaport) }}</div> 
             </div>
             
             
             
              <div  style="margin-bottom:20px" class="placas" data-prototype="{% filter escape %}  {% include 'DgwebBundle:Prototype:foto.html.twig' with { 'form': edit_form.placas.vars.prototype} %}   {% endfilter  %}"> 

