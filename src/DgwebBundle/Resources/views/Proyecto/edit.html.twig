              </div>
             

                               
    <div class="col-sm-12 col-md-12"> 
        <a href="{{ path('admin_proyecto') }}" class="btn btn-default btn-sm" id="cancelarNuevo">Regresar al listado</a> {{ form_widget(edit_form.submit) }}
    </div>     

     
     
 {{ form_end(edit_form) }}          
{% endblock %}


